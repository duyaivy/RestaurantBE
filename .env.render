# Environment Variables for Render

# Django
DJANGO_SETTINGS_MODULE=restaurantBE.settings.production
ENV=prod
SECRET_KEY=your-secret-key-here-make-it-long-and-random-50-chars

# Database (Supabase PostgreSQL - FREE FOREVER!)
# Get from: https://supabase.com → Project → Settings → Database
DB_NAME=postgres
DB_USERNAME=postgres.xxxxxxxxxxxxxxxx
DB_PASSWORD=your-supabase-password
DB_HOST=db.xxxxxxxxxxxxxxxx.supabase.co
DB_PORT=6543  # Use connection pooling port

# Server
ALLOWED_HOSTS=*
HOST=https://restaurantbe-api.onrender.com/

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.com

# Optional - for production logging
DJANGO_LOG_LEVEL=INFO
